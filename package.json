{
  "name": "text-ld",
  "version": "0.0.9",
  "description": "Text Linked Data clean format",
  "main": "dist/index.cjs",
  "source": "src/index.ts",
  "type": "commonjs",
  "types": "dist/types.d.ts",
  "targets": {
    "main": {
      "includeNodeModules": [
        "@qertis/franc-node"
      ],
      "isLibrary": true,
      "optimize": true,
      "context": "node",
      "scopeHoist": true,
      "outputFormat": "commonjs"
    }
  },
  "engines": {
    "node": ">= 20"
  },
  "scripts": {
    "prebuild": "rm -rf dist && tsc --noEmit",
    "build": "parcel build --no-cache",
    "test": "node test/index.cjs",
    "watch": "parcel watch --no-cache"
  },
  "files": [
    "dist/index.cjs",
    "dist/index.cjs.map",
    "dist/types.d.ts",
    "dist/types.d.ts.map"
  ],
  "author": "Denis Baskovsky (https://baskovsky.ru/)",
  "license": "UNLICENSED",
  "dependencies": {
    "anglicize": "~1.0.0",
    "dictionary-ru": "~2.1.0",
    "eyo-kernel": "~2.5.6",
    "fuse.js": "~6.6.2",
    "iso-language-codes": "~2.0.0",
    "retext": "~7.0.1",
    "retext-spell": "~4.0.1",
    "string-strip-html": "~8.5.0",
    "strip-ansi": "~6.0.1"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.12.0",
    "@parcel/transformer-typescript-types": "^2.12.0",
    "@qertis/franc-node": "^6.2.0",
    "@types/node": "^22.10.10",
    "parcel": "^2.12.0",
    "typescript": "^5.5.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qertis/text-ld.git"
  }
}
