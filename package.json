{
  "name": "text-ld",
  "version": "0.0.2",
  "description": "Text Linked Data a Schema.org Type",
  "main": "dist/index.cjs",
  "source": "src/index.ts",
  "type": "commonjs",
  "types": "dist/types.d.ts",
  "targets": {
    "main": {
      "includeNodeModules": [
        "@qertis/franc-node"
      ],
      "isLibrary": true,
      "optimize": true,
      "outputFormat": "commonjs"
    }
  },
  "engines": {
    "node": ">= 20"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc --noEmit && parcel build --no-cache",
    "test": "node test/index.cjs",
    "watch": "tsc --watch"
  },
  "files": [
    "dist/index.cjs",
    "dist/index.cjs.map",
    "dist/types.d.ts",
    "dist/types.d.ts.map"
  ],
  "author": "Denis Baskovsky (https://baskovsky.ru/)",
  "license": "UNLICENSED",
  "dependencies": {
    "eyo-kernel": "^2.5.6"
  },
  "devDependencies": {
    "@qertis/franc-node": "^6.2.0",
    "@parcel/packager-ts": "^2.12.0",
    "@parcel/transformer-typescript-types": "^2.12.0",
    "parcel": "^2.12.0",
    "typescript": "^5.4.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qertis/text-ld.git"
  }
}
